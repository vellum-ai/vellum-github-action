{
    "compilerOptions": {
      "jsx": "react",
      "target": "es2015",
      "allowJs": false,
      "lib": ["es6", "dom", "dom.iterable", "esnext"],
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "esModuleInterop": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
  }